<label for="title">Title</label>
<input type="text" name="title" id="title" value="<%= book.title %> " />
<label for="author">Author</label>
<select name="author" id="author">
  <% authors.forEach(author => { %> <% if (author.id === book.author) {%>
  <option selected value="<%= author.id %> "><%= author.name %></option>
  <% } else { %>
  <option value="<%= author.id %> "><%= author.name %></option>
  <% } %> <% }) %>
</select>
<label for="publishDate">Publish Date</label>
<input
  type="date"
  name="publishDate"
  id="publishDate"
  value="<%= book.publishDate === null ? '' : book.publishDate?.toISOString().split('T')[0] %> "
/>
<label for="publishDate">Page Count</label>
<input
  type="number"
  name="pageCount"
  id="pageCount"
  value="<%= book.pageCount %> "
  min="1"
/>
<label for="coverImageName">Cover</label>
<input type="file" name="cover" id="coverImageName" />
<label for="description">Description</label>
<textarea name="description" id="description" cols="30" rows="10">
<%= book.description %></textarea
>
